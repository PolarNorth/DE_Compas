#:kivy 1.1.0

<MainScreen>:
    inp_x0 : inp_x0
    inp_y0 : inp_y0
    inp_h : inp_h
    inp_xn : inp_xn
    submit_btn : submit_btn
    # graph_box : graph_box
    title_label : title_label
    plot_box_widget : plot_box_widget

    euler_btn : euler_btn
    ieuler_btn : ieuler_btn
    runge_btn : runge_btn

    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            # size_hint_x : 0.5
            size_hint_x : None
            width : 250

            Label:
                id: title_label
                text: "DE F18 Compas"
                size_hint_y : None
                height : 80
            GridLayout:
                cols : 2
                row_default_height : 60
                height :self.minimum_height
                size_hint_y : None

                Label:
                    text : "x0:"
                    width : 60
                    size_hint_x : None
                    # size_hint_y : None
                TextInput:
                    id : inp_x0

                Label:
                    text : "y0:"
                    width : 60
                    size_hint_x : None
                    # size_hint_y : None
                TextInput:
                    id : inp_y0

                Label:
                    text : "step:"
                    width : 60
                    size_hint_x : None
                    # size_hint_y : None
                TextInput:
                    id: inp_h

                # Label:
                #     text : "N1:"
                #     width : 60
                #     size_hint_x : None
                #     # size_hint_y : None
                # TextInput:
                #     id: inp_h

                # Label:
                #     text : "N2:"
                #     width : 60
                #     size_hint_x : None
                #     # size_hint_y : None
                # TextInput:
                #     id: inp_h

                # Label:
                #     text : "K:"
                #     width : 60
                #     size_hint_x : None
                #     # size_hint_y : None
                # TextInput:
                #     id: inp_h
                
                Label:
                    text : "xn:"
                    width : 60
                    size_hint_x : None
                    # size_hint_y : None
                TextInput:
                    id: inp_xn
            Label:
                text : "Numerical methods:"
                size_hint_y : None
                height : 40
            
            BoxLayout:
                orientation: "horizontal"
                height : 40
                size_hint_y : None
                Label:
                    text: "Euler"
                CheckBox:
                    size_hint_x : None
                    id: euler_btn
            BoxLayout:
                orientation: "horizontal"
                height : 40
                size_hint_y : None
                Label:
                    text: "Improved Euler"
                CheckBox:
                    size_hint_x : None
                    id: ieuler_btn
            BoxLayout:
                orientation: "horizontal"
                height : 40
                size_hint_y : None
                Label:
                    text: "Runge-Kutta"
                CheckBox:
                    size_hint_x : None
                    id: runge_btn

            Button:
                height : 80
                size_hint_y : None
                text: "Solve"
                id: submit_btn

            Button:
                text: "Space for DE selection"
        PlotBox:
            id : plot_box_widget
            

<PlotBox>:
    equation_lbl : equation_lbl
    figure_box : figure_box
    # show_diff_equation_btn : show_diff_equation_btn
    show_numerical_solution_btn : show_numerical_solution_btn
    show_exact_solution_btn : show_exact_solution_btn
    show_truncation_error_btn : show_truncation_error_btn
    orientation : "vertical"
    Label:
        id : equation_lbl
        size_hint_y : None
        height : 40
        text : ":)"
    BoxLayout:
        id : figure_box
        orientation: "vertical"
        Label:
            text : "Plot will be here"
    BoxLayout:
        orientation: "horizontal"
        size_hint_y : None
        height : 40
        # Button:
        #     id : show_diff_equation_btn
        #     text: "y'"
        Button:
            id : show_numerical_solution_btn
            on_release : root.show_numerical_solution_plot()
            text: "Numerical solution"
        Button:
            id : show_exact_solution_btn
            on_release : root.show_exact_solution_plot()
            text: "Exact solution"
        Button:
            id : show_truncation_error_btn
            on_release : root.show_truncation_error_plot()
            text: "Global truncation error"
