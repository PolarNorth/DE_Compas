#:kivy 1.1.0
<SettingsTextInput>:
    size_hint_y : None
    height : 40

<SettingsLabel>:
    size_hint_x : None
    width : 60
    size_hint_y : None
    height : 40

<MainScreen>:
    inp_x0 : inp_x0
    inp_y0 : inp_y0
    # inp_h : inp_h
    inp_n1 : inp_n1
    inp_n2 : inp_n2
    inp_k : inp_k
    inp_xn : inp_xn
    inp_n : inp_n
    submit_btn : submit_btn
    # graph_box : graph_box
    title_label : title_label
    plot_box_widget : plot_box_widget

    euler_btn : euler_btn
    ieuler_btn : ieuler_btn
    runge_btn : runge_btn

    BoxLayout:
        orientation: "horizontal"
        ScrollView:
            size_hint_y : None
            size_hint_x : None
            # size : self.size
            width : 250
            height : root.height
            BoxLayout:
                orientation: "vertical"
                # size_hint_x : 0.5
                size_hint_x : None
                size_hint_y : None
                height : self.minimum_height
                width : 250

                Label:
                    id: title_label
                    text: "DE F18 Compas"
                    size_hint_y : None
                    height : 80
                GridLayout:
                    cols : 2
                    # row_default_height : 60
                    height :self.minimum_height
                    size_hint_y : None

                    SettingsLabel:
                        text : "x0:"
                    SettingsTextInput:
                        id : inp_x0

                    SettingsLabel:
                        text : "y0:"
                    SettingsTextInput:
                        id : inp_y0

                    SettingsLabel:
                        text : "N:"
                    SettingsTextInput:
                        id: inp_n

                    SettingsLabel:
                        text : "xn:"
                    SettingsTextInput:
                        id: inp_xn
                
                Label:
                    text : "Total approximation error"
                    height : 50
                    size_hint_y : None

                GridLayout:
                    cols : 2
                    height :self.minimum_height
                    size_hint_y : None
                    SettingsLabel:
                        text : "N1:"
                    SettingsTextInput:
                        id: inp_n1

                    SettingsLabel:
                        text : "N2:"
                    SettingsTextInput:
                        id: inp_n2

                    SettingsLabel:
                        text : "K:"
                    SettingsTextInput:
                        id: inp_k
                    
                Label:
                    text : "Numerical methods:"
                    size_hint_y : None
                    height : 40

                BoxLayout:
                    orientation: "horizontal"
                    height : 40
                    size_hint_y : None
                    Label:
                        text: "Euler"
                    CheckBox:
                        size_hint_x : None
                        id: euler_btn
                BoxLayout:
                    orientation: "horizontal"
                    height : 40
                    size_hint_y : None
                    Label:
                        text: "Improved Euler"
                    CheckBox:
                        size_hint_x : None
                        id: ieuler_btn
                BoxLayout:
                    orientation: "horizontal"
                    height : 40
                    size_hint_y : None
                    Label:
                        text: "Runge-Kutta"
                    CheckBox:
                        size_hint_x : None
                        id: runge_btn

                Button:
                    height : 80
                    size_hint_y : None
                    text: "Solve"
                    id: submit_btn

                # Button:
                #     text: "Space for DE selection"
        PlotBox:
            id : plot_box_widget
            

<PlotBox>:
    equation_lbl : equation_lbl
    figure_box : figure_box
    # show_diff_equation_btn : show_diff_equation_btn
    show_numerical_solution_btn : show_numerical_solution_btn
    show_total_error_btn : show_total_error_btn
    show_truncation_error_btn : show_truncation_error_btn
    orientation : "vertical"
    Label:
        id : equation_lbl
        size_hint_y : None
        height : 40
        text : ":)"
    BoxLayout:
        id : figure_box
        orientation: "vertical"
        Label:
            text : "Plot will be here"
    BoxLayout:
        orientation: "horizontal"
        size_hint_y : None
        height : 40
        # Button:
        #     id : show_diff_equation_btn
        #     text: "y'"
        Button:
            id : show_numerical_solution_btn
            on_release : root.show_numerical_solution_plot()
            text: "Numerical solution"
        Button:
            id : show_total_error_btn
            on_release : root.show_total_error_plot()
            text: "Total truncation error"
        Button:
            id : show_truncation_error_btn
            on_release : root.show_truncation_error_plot()
            text: "Global truncation error"
